header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All&nbsp;tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.logout__btn Log&nbsp;Out
      a.nav__el(href='#')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name} profile`)
        span #{user.name.split(' ')[0]}
    else
      a.nav__el(href='/login') Log&nbsp;in
      a.nav__el.nav__el--cta(href='/signup') Sign&nbsp;up
